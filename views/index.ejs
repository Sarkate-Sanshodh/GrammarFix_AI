<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
     <style>
        /* Simple spinner for loading state */
        .spinner {
            border: 4px solid rgba(0, 0, 0, 0.1);
            width: 36px;
            height: 36px;
            border-radius: 50%;
            border-left-color: #09f;
            animation: spin 1s ease infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
    <title>Document</title>
</head>
<body class="bg-gray-200 text-gray-800">
    <header class="bg-white shadow-sm">
        <nav class="container mx-auto px-4 sm:px-6 py-4 flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0 ">
            <a href="/" class="flex items-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-600"><path d="M12 22h6a2 2 0 0 0 2-2V7l-5-5H6a2 2 0 0 0-2 2v10"/><path d="M14 2v4a2 2 0 0 0 2 2h4"/><path d="m5 12 3 3 3-3"/></svg>
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">GrammarFix</h1>
            </a>
            <div class="flex items-center space-x-5">
                <% if(user){ %>
                   
                    <span class="text-gray-600 border text-sm sm:text-base border-gray-200 py-2 px-4 bg-gray-100 shadow-lg"><%= user.username%></span>
                    <a class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 sm:text-base transition" href="/logout">logout</a>
                    <% } else{ %>
                    <a class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition text-sm sm:text-base" href="/login">Login</a>
                    <a class="bg-gray-700 text-white px-4 py-2 rounded-lg hover:bg-gray-800 transition text-sm sm:text-base" href="/signup">Signup</a>
                  <%  } %>
            </div>
        </nav>
    </header>

    <main class="container mx-auto px-4 sm:px-6 py-8 sm:py-12">
        <div class="max-w-4xl mx-auto bg-white p-4 sm:p-8 rounded-2xl shadow-lg">
            <h2 class="text-3xl font-bold mb-2 text-center">Correct Your Text</h2>
            <p class="text-base sm:text-xl text-gray-500 mb-6 sm:mb-8 text-center ">Enter your text below to check for grammar, spelling, and clarity.</p>

        <form id="correction-form">
            <div class="mb-6">
                <label for="original-text" class="block text-sm font-medium text-gray-700 mb-2">Original Text</label>
                <textarea class="w-full p-4 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition" name="text" id="original-text" rows="8" placeholder="Paste yout text here..."></textarea>
            </div>

            <div class="flex justify-center mb-6">
              <button type="submit" class="bg-blue-600 text-white font-semibold px-8 py-3 rounded-lg hover:bg-blue-700 transition flex items-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"></path></svg>
                        <span>Correct Text</span>
                    </button>
            </div>
        </form>

        <!--this conatined show when the form is submited --> 
        <div id="result-container" class="hidden">
            <div class="border-t border-gray-200 pt-6">
                <label for="corrected-text-output" class="block text-sm font-medium text-gray-700 mb-2">Corrected Text</label>
                <!--loading spiner--> 
              <div id="loader" class="flex justify-center items-center h-48 hidden">
                <div class="spinner"></div>
              </div>
              <!--output arear for correct text-->
              <div id="corrected-text-output" class="w-full p-4 bg-gray-100 border border-gray-200 rounded-lg min-h-[200px] whitespace-pre-wrap"></div>
              <p id="error-message" class="text-red-500 mt-2"></p>
              <div id="login-prompt" class=" hidden text-center">
                <h3 class="text-2xl text-gray-500">Free Trial Used</h3>
                <p class="text-gray-600 text-xl my-4">You've used your one free correction. Please log in or sign up to continue using GrammarFix.</p>
                <div class="flex gap-4 justify-center">
                    <a class="text-white bg-blue-600 px-6 py-2 rounded-lg hover:bg-blue-800 transition" href="/login">Login</a>
                    <a class="text-white bg-gray-700 px-6 py-2 rounded-lg hover:bg-gray-800" href="/signup">Sign up</a>
                </div>
              </div>
            </div>
        </div>
      </div>
    </main>

    <footer class="bg-white mt-auto py-6 border-t border-gray-300 shadow-lg">
        <div class="container mx-auto px-6 text-center text-gray-500">
            <p>&copy; <span id="copyright-year"></span>GrammarFix. All Rights Reserved.</p>
            <p class="text-sm  mt-1">Created with ðŸ˜Ž by Sanshodh Sarkate </p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded' , ()=>{

        const form = document.getElementById('correction-form');
        const originalText = document.getElementById("original-text");
        const resultContainer = document.getElementById('result-container');
        const correctedTextOutput = document.getElementById('corrected-text-output');
        const loader = document.getElementById('loader');
        const errorMessage = document.getElementById('error-message');
        const loginPrompt = document.getElementById('login-prompt');

        const isLoggedIn = <%- !!user %> ;

        // Set the current year in the footer
        document.getElementById('copyright-year').textContent = new Date().getFullYear();

        form.addEventListener('submit' , async(e)=>{
            e.preventDefault();
            errorMessage.textContent = '';
            correctedTextOutput.textContent = '';
            resultContainer.classList.remove('hidden');
            // loader.classList.remove('hidden');
            loginPrompt.classList.add('hidden')

            const hasTrialUsed = localStorage.getItem('hasTrialUsed') ==='true' ;
            if(!isLoggedIn && hasTrialUsed){
                correctedTextOutput.classList.add('hidden');
                loginPrompt.classList.remove('hidden');
                return ;
            }

            correctedTextOutput.classList.remove('hidden');
            loader.classList.remove('hidden');


            const text = originalText.value;

            try{
                const res = await fetch('/api/correct' , {
                    method: 'POST',
                    body:JSON.stringify({text}),
                    headers: { 'Content-Type': 'application/json' }
                })
                
                const data = await res.json();

                 if (res.ok) {
                    correctedTextOutput.textContent = data.correctedText.trim();
                    // If the user is a guest, set the trial flag after their first successful use
                    if(!isLoggedIn){
                        localStorage.setItem('hasTrialUsed' , 'true')
                    }
                } else {
                    errorMessage.textContent = data.error || 'An unknown error occurred.';
                }
            } catch (err) {
                console.log(err);
                errorMessage.textContent = 'Failed to connect to the server. Please check your connection.';
            } finally {
                loader.classList.add('hidden');
            }

        });
            
     });
    </script>
</body>
</html>